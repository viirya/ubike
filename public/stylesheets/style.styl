/*
 * Import nib
 */
@import 'nib'


/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  background-color background-color
  color #444
  font-family: "Monaco", "Helvetica", "Times New Roman"

header
  //color #fff
  //text-align center
  margin-bottom 20px

  h1
    font-size 50px
    margin-bottom 10px

  span
    font-size 15px
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  //background-color main-color
  //border-bottom 1px solid darken(main-color, 30%)
  //text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 800px
  height auto
  margin 50px auto
  overflow hidden

.main-content
  height 800px
  padding-top 50px

  p
    margin-bottom 20px
 
  .title
    margin-bottom 50px
    font-size 40px 

  span.query_title
    font-size 28px
    margin-right 10px

  .query
    margin-bottom 50px  

  p.desc
    font-size 18px

  #stations

    .station_name
    .station_bike
    .station_slot
      font-size 25px
      margin 0 20px 0 0

    .station
      margin 20px 0 10px 0
 
p
  line-height 1.8

