!!!5
html(ng-app='ubike-web', lang="zh-TW")
  head
    title Ubike 車輛與車位租借狀況
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery.fancybox.css')
  body
    .container-fluid.main-content(ng-controller="UbikeCtrl")
      .row-fluid
        .span11.offset4
          .title Ubike 車輛與車位租借狀況
      .row-fluid
        .span11.offset4
          .viewtype
            span.view_type 我要看
            span.table(ng-click="click_viewtype('table')") 數據
            span.figure(ng-click="click_viewtype('figure')") 圖表
          .type
            span.query_type 我要找
            span.bike(ng-click="click_querytype('bike')") 車輛
            span.slot(ng-click="click_querytype('slot')") 車位
          .query
            span.query_title 以站名查詢
            input(id="station_name", autofocus, ng-model="station_name")
      .row-fluid#table
        .span11.offset2
          block content
      .row-fluid#figure
        .span11.offset2
          #d3box(style="height:4000px; width:1200px;")
            #d3-canvas(style="height:4000px; width:1200px")
      .row-fluid
        .span11.offset2
          #box(style="height:0px; width:0px;margin:-9999px")
            #map-canvas(style="height:800px; width:1000px")
        .span11.offset2
          .infobox
            block infobox
      p.clear
    .footer
  script(src='/javascript/jquery-1.7.2.min.js', type='text/javascript')
  script(src='/javascript/bootstrap.min.js', type='text/javascript')
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false', type='text/javascript')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular.min.js', type='text/javascript')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-resource.min.js', type='text/javascript')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js', type='text/javascript')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-animate.min.js', type='text/javascript')
  script(src='/socket.io/socket.io.js', type='text/javascript')
  script(src='/javascript/jquery.fancybox.js', type='text/javascript')
  script(src='http://d3js.org/d3.v3.min.js', type='text/javascript')
  script(src='/javascript/app.js', type='text/javascript')
 
 
